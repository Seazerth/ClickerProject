@model AuthViewModel

<div class="d-flex flex-column align-items-center justify-content-center vh-100">
	<div class="bg-light p-5">
		<form class="d-flex flex-column align-items-center" asp-action="Register" asp-controller="Auth" method="post">
			<h4>Регистрация</h4>
			<label>Имя пользователя</label>
			<input class="form-control mx-auto m-2" type="text" asp-for="@Model.UserName" maxlength="30" />
			<label>Пароль</label>
			<input class="form-control mx-auto m-2" type="password" asp-for="@Model.Password" />
			<input class="btn btn-primary mx-auto" type="submit" value="Зарегестрироваться" />
			<div asp-validation-summary="All"/>
		</form>
		<a class="mx-auto" asp-action="Login" asp-controller="Auth">Войти в аккаунт</a>
	</div>
</div>